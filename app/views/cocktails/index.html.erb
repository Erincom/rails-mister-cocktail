<div class="container">
  <div class="row">
    <% @cocktails.each do |cocktail| %>
    <div class="col-xs-1 col-md-4">
      <div class="card">
          <%= cl_image_tag cocktail.photo, height: 200, crop: :fit, class: "center-block" %>
        <h4 class="card-title text-center"><%= cocktail.name %></h4>
        <br>
        <p class="text-center">
          <%= link_to 'Show', cocktail %> |
          <%= link_to 'Edit', edit_cocktail_path(cocktail) %> |
          <%= link_to 'Delete', cocktail, method: :delete, data: { confirm: 'Are you sure?' } %>
        </p>
      </div>
    </div>
    <% end %>
  </div>

